<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f7ecee"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:text="ꜰᴀᴄᴇ ᴅᴇᴛᴇᴄᴛɪᴏɴ"
        android:textSize="45dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#413b45"
        android:layout_height="60dp"></TextView>
<LinearLayout
    android:layout_width="400dp"
    android:layout_marginRight="40dp"
    android:layout_height="100dp"
    android:layout_marginTop="100dp"

    android:layout_marginLeft="40dp"

    android:background="@drawable/face_design"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="79dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:src="@drawable/faceicon"></ImageView>

    <TextView
        android:layout_width="250dp"
        android:id="@+id/faceText"

        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"></TextView>
</LinearLayout>



    <LinearLayout
        android:layout_width="400dp"
        android:layout_marginRight="40dp"
        android:layout_height="100dp"

        android:layout_marginLeft="40dp"

        android:layout_marginTop="30dp"
        android:background="@drawable/smile_design"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/smileImage"
            android:layout_width="81dp"
            android:layout_height="83dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/smile_two_icon"></ImageView>

        <TextView
            android:id="@+id/smileText"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="25dp"

            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_marginRight="40dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/eyes_design"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/eye_icon"></ImageView>

        <TextView
            android:id="@+id/leftEyeText"
            android:layout_width="250dp"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_marginRight="40dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/left_eye_design"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/eye_icon"></ImageView>

        <TextView
            android:id="@+id/rightEyeText"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>


    <Button
        android:id="@+id/btncamera"
        android:layout_width="400dp"
        android:layout_marginRight="40dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/camera_button"
        android:text="Open Camera "
        android:layout_marginTop="60dp"
        android:textSize="18dp"
  ></Button>

</LinearLayout>